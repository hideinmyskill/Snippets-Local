{
    "manifest_version": 3,
    "name": "Snippets",
    "version": "1.0",
    "description": "A fully offline local snippet expander",
    "permissions": ["storage", "scripting"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "run_at": "document_idle"
      }
    ],
    "background": {
      "service_worker": "background.js"
    },
    "host_permissions": ["<all_urls>"]
  }
  